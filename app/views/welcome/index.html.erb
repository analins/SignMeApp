<nav>
  <h1>SignMeApp</h1> <input type="text" ng-model="q" placeholder="search">
</nav>

<div class="container" ng-controller="MainController">


  <form ng-submit="createNewUser()">
    <input type="text" ng-model="newUser.firstname" placeholder="first name">
    <input type="text" ng-model="newUser.lastname" placeholder="last name">
    <input type="text" ng-model="newUser.email" placeholder="email">
    <input type="text" ng-model="newUser.book" placeholder="book">
    <input type="textarea" ng-model="newUser.review" placeholder="write a review">
    <textarea ng-model="newUser.review" rows="5" cols="40" placeholder="write a review"></textarea>

    <input type="submit">
  </form>
<div class="reviews">
  <ul>
    <li ng-repeat="user in users | filter:q">
      <h5>{{user.firstname}} {{user.lastname}}</h5>
      <h6>{{user.book}}</h6>
      <p>{{user.review}}</p>
      <a href="#" ng-click="deleteUser(user.id)">Remove</a>
      <!-- <a href="#" ng-click="editUser(user.id)">Edit</a> -->
    </li>
  </ul>
</div>

</div>
